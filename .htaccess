RewriteEngine On

# Root (/) serves landing page
RewriteRule ^$ index.html [L]

# Landing page assets
RewriteCond %{REQUEST_URI} ^/landing-assets/
RewriteRule .* - [L]

# React assets (allow JS/CSS/images inside /app/assets/)
RewriteCond %{REQUEST_URI} ^/u2u_global_react/app/assets/
RewriteRule .* - [L]

# Everything else â†’ React
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ app/react_index.html [L]
